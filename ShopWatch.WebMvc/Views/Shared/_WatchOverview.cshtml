@using ShopWatch.Model
@using System.Globalization
@model Watch
@{
    var promotion = Model.Promotions.FirstOrDefault(item => (item.StartDate <= DateTime.Now && DateTime.Now <= item.EndDate));
}
<div class="col-md-3">
    <a href="/Watch/Details/@Model.WatchId"><img class="img-fluid img-thumbnail" style="height:80%;width:100%" src="~/Assets/images/HINHLON/@Model.ImageUrl" /></a>
    <p>
        <a href="/Watch/Details/@Model.WatchId">@Model.WatchName</a>
    </p>

    @if (promotion != null)
    {
        <p style="position: absolute;top: 20px;left: 12px; padding: 0px 5px 0px 5px; background-color: rgb(242, 82, 32);color: #fff;font-size: 0.8rem;border-radius: 2px;text-align: center;">
            <span>@promotion.PromotionName</span>
        </p>

    }
    <div class="input-group mb-3">
        <p class="form-control">@Model.Price.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</p>
        <div class="input-group-append">
            <a class="btn btn-outline-primary" href="/Watch/ListByPublisher?publisher=@Model.Publisher.PublisherName">@Model.Publisher.PublisherName</a>
        </div>
    </div>
</div>
