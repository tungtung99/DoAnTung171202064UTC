@model ShopWatch.WebMvc.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Hãy đăng nhập vào tài khoản của bạn.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-3 control-label" style="padding-bottom:10px;">Tên đăng nhập</div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AccountName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PassWord, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", @id = "pass" })
                    </div>
                </div>
                <div style="display:flex;">

                    <div style="width:15%; padding-left:15px;">
                        <input type="checkbox" onclick="myFunction('pass')">&ensp;Hiện
                        @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
                    </div>

                    <div class="checkbox" style="width:20%;">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <div>
                        <a  href="">Quên mật khẩu</a>
                    </div>
                </div>
                <div>
                    <label class="text-danger">@ViewBag.MessageLogin</label>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng nhập" class="btn btn-dark" />
                    </div>
                </div>
                <p style="padding-left:15px;">
                    @Html.ActionLink("Đăng kí tài khoản mới", "Register")
                </p> @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@}
        </section>
    </div>
</div>
@section Scripts {
    <script>
        function myFunction(a) {
            var x = document.getElementById(a);
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
}

